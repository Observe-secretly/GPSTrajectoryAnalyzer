{
  "extends": "./tsconfig.app.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "**/*.js", "**/*.mjs", "**/*.cjs"],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "preserveValueImports": false,
    "strict": true,
    "allowJs": false,
    "composite": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  }
}